<h1>USER LIST</h1>
<table class="table">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Admin</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <% @users.each do |user| %>
        <td><%= user.name.all %></td>
        <td><%= user.email.all %></td>
        <td><%= user.admin? %></td>
        <td><%= link_to "Usuario", user_path(user), method: :patch %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Home", root_path %>